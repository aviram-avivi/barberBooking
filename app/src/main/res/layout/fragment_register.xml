<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/register"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/mail"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/person"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/password"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextPasswordAuth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/password"
            android:ems="10"
            android:hint="Repeat Password "
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/phone"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/money"
            android:ems="10"
            android:hint="Price"
            android:inputType="numberDecimal"
            android:visibility="gone"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/address"
            android:ems="10"
            android:hint="Address"
            android:inputType="text"
            android:visibility="gone"
            tools:ignore="TouchTargetSizeCheck" />


        <RadioGroup
            android:id="@+id/userGender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checkedButton="@id/userGenderFemale"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/userGenderMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Male"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/userGenderFemale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Female"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>

        <RadioGroup
            android:id="@+id/userTypeRg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checkedButton="@id/clientUserType"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/barberUserType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Barber"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/clientUserType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Client"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            android:layout_weight="1"
            android:background="@drawable/designbutton"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="already have an account? Login!"
            android:textAlignment="center"
            android:textColor="#D61355"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>


</ScrollView>